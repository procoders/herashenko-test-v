{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist", "scripts"]
}
